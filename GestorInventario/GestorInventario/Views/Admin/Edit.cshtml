@using GestorInventario.Models.ViewModels
@model UsuarioEditViewModel

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edicion</title>
 



</head>
<body>
    <h2>Editar Usuario</h2>

    <form asp-action="Edit" asp-controller="Admin" method="post">
        <div class="form-group">
            <input type="hidden" asp-for="Id" />
            <label for="Email">Email</label>
            <input type="email" class="form-control" id="Email" asp-for="Email" required>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="NombreCompleto">Nombre Completo</label>
            <input type="text" class="form-control" id="NombreCompleto" asp-for="NombreCompleto" required>
        </div>
        <div class="form-group">
            <label for="FechaNacimiento">Fecha de Nacimiento</label>
            <input type="date" class="form-control" id="FechaNacimiento" asp-for="FechaNacimiento" required>
        </div>
        <div class="form-group">
            <label for="Telefono">Teléfono</label>
            <input type="text" class="form-control" id="Telefono" asp-for="Telefono" required>
        </div>
        <div class="form-group">
            <label for="Direccion">Dirección</label>
            <input type="text" class="form-control" id="Direccion" asp-for="Direccion" required>
        </div>
        <div class="form-group">
            <label for="IdRol">Rol</label>
            <select class="form-control" asp-for="IdRol" asp-items="ViewBag.Roles">
                <option value="">Selecciona un rol</option>
            </select>
            <span asp-validation-for="IdRol" class="text-danger"></span>
        </div>
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-warning">
                @TempData["ErrorMessage"]
            </div>
        }
        <button type="submit" class="btn btn-primary mt-2">Editar</button>
    </form>

</body>
</html>



