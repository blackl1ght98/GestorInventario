@using GestorInventario.Models.ViewModels;
@model UserViewModel

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5">Crear Usuario</h3>
                        <form asp-action="Create" method="post">
                            <div data-mdb-input-init class="form-outline mb-4">
                                <input type="email" id="typeEmailX-2" class="form-control form-control-lg" asp-for="Email" />
                                <label class="form-label" for="typeEmailX-2">Email</label>
                            </div>

                            <div data-mdb-input-init class="form-outline mb-4">
                                <input type="password" id="typePasswordX-2" class="form-control form-control-lg" asp-for="Password" />
                                <label class="form-label" for="typePasswordX-2">Password</label>
                            </div>
                              @if (User.IsInRole("administrador"))
                              {
                            <div data-mdb-input-init class="form-outline mb-4">
                                    <select asp-for="IdRol" class="form-select mt-2" asp-items="ViewBag.Roles" value="usuario"></select>
                                <label class="form-label" for="typePasswordX-2">Rol</label>
                            </div>
                             }
                            <div data-mdb-input-init class="form-outline mb-4">
                                <input type="text"  class="form-control form-control-lg" asp-for="NombreCompleto" />
                                <label class="form-label" >Nombre Completo</label>
                            </div>
                            <div data-mdb-input-init class="form-outline mb-4">
                                <input type="date" class="form-control form-control-lg" asp-for="FechaNacimiento" />
                                <label class="form-label">Fecha Nacimiento</label>
                            </div>
                            <div data-mdb-input-init class="form-outline mb-4">
                                <input type="text" class="form-control form-control-lg" asp-for="Telefono" />
                                <label class="form-label">Telefono</label>
                            </div>
                            <div data-mdb-input-init class="form-outline mb-4">
                                <input type="text" class="form-control form-control-lg" asp-for="Direccion" placeholder="C/Zafiro 3" />
                                <label class="form-label">Direccion</label>
                            </div>
                            <div data-mdb-input-init class="form-outline mb-4">
                                <input type="text" class="form-control form-control-lg" asp-for="ciudad" />
                                <label class="form-label">Ciudad</label>
                            </div>
                            <div data-mdb-input-init class="form-outline mb-4">
                                <input type="text" class="form-control form-control-lg" asp-for="codigoPostal" />
                                <label class="form-label">Codigo Postal</label>
                            </div>
                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block" type="submit">Crear</button>
                        
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>