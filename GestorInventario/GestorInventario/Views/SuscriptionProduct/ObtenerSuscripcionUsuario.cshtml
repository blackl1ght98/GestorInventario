@model List<UserSubscription>



<div class="container-fluid">
    <h1 class="text-left">Suscripciones Activas</h1>
    <div class="table">
        <table class="table table-striped table-bordered w-100">
            <thead>
                <tr>
                    <th class="col-2">Usuario</th>
                    <th class="col-2">Nombre Subscriptor</th>
                    <th class="col-2">Id Suscripción</th>
                    <th class="col-2">Detalles de la suscripción</th>
                    <th class="col-2">Cancelar suscripción</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count > 0)
                {
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td>@user.User.NombreCompleto</td>
                            <td>@user.NombreSusbcriptor</td>
                            <td>@user.SubscriptionId</td>
                            <td>
                                <a asp-action="DetallesSuscripcion" asp-controller="SuscriptionProduct" asp-route-id="@user.SubscriptionId" class="btn btn-warning mt-2">Mostrar detalles suscripción</a>
                            </td>
                            <td>
                                <button class="btn btn-danger user-action-button mt-2" data-suscription-id="@user.SubscriptionId">
                                    Cancelar
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5" class="text-center">No hay suscripciones activas para este usuario.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>