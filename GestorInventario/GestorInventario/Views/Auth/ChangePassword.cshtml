<form asp-controller="Auth" asp-action="ChangePassword" method="post">
    <div class="form-group">
        <label for="passwordAnterior">Contraseña anterior</label>
        <input type="password" class="form-control" id="passwordAnterior" name="passwordAnterior" required>
    </div>
    <div class="form-group">
        <label for="passwordActual">Nueva contraseña</label>
        <input type="password" class="form-control" id="passwordActual" name="passwordActual" required>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Cambiar contraseña</button>
</form>