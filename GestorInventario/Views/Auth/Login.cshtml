@using GestorInventario.Models.ViewModels
@model LoginViewModel

<section class="vh-100">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <div class="card-body p-5 text-center">

                        <h3 class="mb-5">Sign in</h3>
                         <form asp-controller="Auth" method="post" class="form" role="form" autocomplete="off" id="formLogin">
                        <div data-mdb-input-init class="form-outline mb-4">
                            <input type="email" id="typeEmailX-2" class="form-control form-control-lg" asp-for="Email" />
                            <label class="form-label" for="typeEmailX-2">Email</label>
                        </div>

                        <div data-mdb-input-init class="form-outline mb-4">
                                <input type="password" id="typePasswordX-2" class="form-control form-control-lg" asp-for="Password" />
                            <label class="form-label" for="typePasswordX-2">Password</label>
                        </div>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                           
                        <button data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg btn-block" type="submit">Login</button>

                            <a asp-action="Create" asp-controller="Admin" class="btn btn-info btn-lg ">Crear Usuario</a>

                            <a asp-action="ResetPasswordOlvidada" asp-controller="Auth" class="btn btn-info btn-lg mt-2 ">Recuperar contraseña</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>