@model string

@{
    ViewData["Title"] = "Restablecimiento de Contraseña - GestorInventario";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm" style="border-radius: 1rem;">
                <div class="card-header text-center py-4" style="background: linear-gradient(90deg, var(--primary), #3B82F6); color: white;">
                    <h3 class="mb-0 fw-bold">Restablecimiento de Contraseña</h3>
                </div>

                <div class="card-body p-4 p-md-5 text-center">

                    <!-- Mensaje de error -->
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
                            <i class="bi bi-exclamation-circle nav-icon me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                        </div>
                    }

                    <!-- Mensaje principal -->
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill" style="font-size: 3rem; color: var(--secondary);"></i>

                        @if (User.IsInRole("Administrador"))
                        {
                            <h4 class="mt-3" style="color: var(--primary);">
                                Proceso iniciado correctamente
                            </h4>

                            <p class="text-muted">
                                Se ha iniciado el proceso de restablecimiento de contraseña para el usuario
                                <strong>@Model</strong>.
                            </p>

                            <p class="text-muted">
                                El usuario recibirá un correo electrónico con las instrucciones necesarias para
                                establecer una nueva contraseña.
                            </p>
                        }
                        else
                        {
                            <h4 class="mt-3" style="color: var(--primary);">
                                Revisa tu correo electrónico
                            </h4>

                            <p class="text-muted">
                                Si el correo electrónico introducido está registrado en nuestro sistema,
                                recibirás un mensaje con las instrucciones para restablecer tu contraseña.
                            </p>

                            <p class="text-muted">
                                Si no lo ves en unos minutos, revisa la carpeta de spam o correo no deseado.
                            </p>
                        }
                    </div>

                    <!-- Botón de acción -->
                    @if (User.IsInRole("Administrador"))
                    {
                        <a asp-action="Index" asp-controller="Admin" class="btn btn-primary btn-lg">
                            <i class="bi bi-arrow-left nav-icon"></i> Volver a Usuarios
                        </a>
                    }
                    else
                    {
                        <a asp-action="Login" asp-controller="Auth" class="btn btn-primary btn-lg">
                            <i class="bi bi-arrow-left nav-icon"></i> Volver a Iniciar Sesión
                        </a>
                    }

                </div>
            </div>
        </div>
    </div>
</div>
