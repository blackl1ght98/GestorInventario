@model string

@{
    ViewData["Title"] = "Restablecimiento de Contraseña - GestorInventario";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm" style="border-radius: 1rem;">
                <div class="card-header text-center py-4" style="background: linear-gradient(90deg, var(--primary), #3B82F6); color: white;">
                    <h3 class="mb-0 fw-bold">Restablecimiento de Contraseña</h3>
                </div>
                <div class="card-body p-4 p-md-5 text-center">
                    <!-- Mensaje de error -->
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
                            <i class="bi bi-exclamation-circle nav-icon me-2"></i>
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                        </div>
                    }
                    <!-- Mensaje de éxito -->
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill" style="font-size: 3rem; color: var(--secondary);"></i>
                        <h4 class="mt-3" style="color: var(--primary);">¡Contraseña Restablecida!</h4>
                        <p class="text-muted">
                            La contraseña para el usuario <strong>@Model</strong> ha sido restablecida.
                        </p>
                        <p class="text-muted">
                            Se ha enviado un correo electrónico con instrucciones para cambiar la contraseña.
                        </p>
                    </div>
                    <!-- Botón de acción -->
                    <a asp-action="Index" asp-controller="Admin" class="btn btn-primary btn-lg">
                        <i class="bi bi-arrow-left nav-icon"></i> Volver a Usuarios
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>