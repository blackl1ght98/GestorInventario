@{
    ViewData["Title"] = "Recuperar Contraseña - GestorInventario";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm" style="border-radius: 1rem;">
                <div class="card-header text-center py-4" style="background: linear-gradient(90deg, var(--primary), #3B82F6); color: white;">
                    <h3 class="mb-0 fw-bold">Recuperar Contraseña</h3>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form asp-controller="Auth" asp-action="ResetPasswordOlvidada" method="post">
                        <!-- Correo Electrónico -->
                        <div class="mb-4">
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: var(--background); border-color: var(--secondary);">
                                    <i class="bi bi-envelope" style="color: var(--secondary);"></i>
                                </span>
                                <input type="email" class="form-control form-control-lg" id="email" name="email"
                                       placeholder="Correo Electrónico" required />
                            </div>
                            <span class="text-danger small" id="email-error"></span>
                        </div>

                        <!-- Mensaje de éxito -->
                        @if (TempData["Success"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show mb-4" role="alert">
                                <i class="bi bi-check-circle nav-icon me-2"></i>
                                @TempData["Success"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                            </div>
                        }

                        <!-- Botones -->
                        <div class="d-flex justify-content-between gap-3">
                            <button type="submit" class="btn btn-primary btn-lg flex-grow-1">
                                <i class="bi bi-send nav-icon"></i> Enviar Correo de Recuperación
                            </button>
                            <a asp-action="Login" asp-controller="Auth" class="btn btn-outline-secondary btn-lg flex-grow-1">
                                <i class="bi bi-arrow-left nav-icon"></i> Volver al Login
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

