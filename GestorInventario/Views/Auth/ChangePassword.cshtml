@{
    ViewData["Title"] = "Cambiar Contraseña - GestorInventario";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card border-0 shadow-sm" style="border-radius: 1rem;">
                <div class="card-header text-center py-4" style="background: linear-gradient(90deg, var(--primary), #3B82F6); color: white;">
                    <h3 class="mb-0 fw-bold">Cambiar Contraseña</h3>
                </div>
                <div class="card-body p-4 p-md-5">
                    <form asp-controller="Auth" asp-action="ChangePassword" method="post">
                        <!-- Contraseña Anterior -->
                        <div class="mb-4">
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: var(--background); border-color: var(--secondary);">
                                    <i class="bi bi-lock" style="color: var(--secondary);"></i>
                                </span>
                                <input type="password" class="form-control form-control-lg" id="passwordAnterior" name="passwordAnterior"
                                       placeholder="Contraseña Anterior" required />
                                <button type="button" class="btn btn-outline-secondary toggle-password" data-target="passwordAnterior">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span class="text-danger small" id="passwordAnterior-error"></span>
                        </div>

                        <!-- Nueva Contraseña -->
                        <div class="mb-4">
                            <div class="input-group">
                                <span class="input-group-text" style="background-color: var(--background); border-color: var(--secondary);">
                                    <i class="bi bi-lock-fill" style="color: var(--secondary);"></i>
                                </span>
                                <input type="password" class="form-control form-control-lg" id="passwordActual" name="passwordActual"
                                       placeholder="Nueva Contraseña" required />
                                <button type="button" class="btn btn-outline-secondary toggle-password" data-target="passwordActual">
                                    <i class="bi bi-eye"></i>
                                </button>
                            </div>
                            <span class="text-danger small" id="passwordActual-error"></span>
                        </div>

                        <!-- Mensaje de error -->
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-warning alert-dismissible fade show mb-4" role="alert">
                                @TempData["ErrorMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Cerrar"></button>
                            </div>
                        }

                        <!-- Botones -->
                        <div class="d-flex justify-content-between gap-3">
                            <button type="submit" class="btn btn-primary btn-lg flex-grow-1">
                                <i class="bi bi-save nav-icon"></i> Guardar
                            </button>
                            <a asp-action="Index" asp-controller="Admin" class="btn btn-outline-secondary btn-lg flex-grow-1">
                                <i class="bi bi-arrow-left nav-icon"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
 
    <script src="~/js/mostrarYOcultarPassword.js" asp-append-version="true"></script>
}
