@model PedidoViewModel
@using GestorInventario.MetodosExtension
@using GestorInventario.ViewModels.order

<h1 class="display-5 mb-4 text-primary">Pedidos</h1>



@if (User.IsInRole("Administrador"))
{
    <a asp-action="Create" class="btn btn-primary mb-4">
        <i class="bi bi-plus-circle me-2"></i>Crear Pedido
    </a>
}

<div class="container my-4">
    <div class="row g-3">
        <div class="col-md-6">
            <form asp-controller="Pedidos" asp-action="Index" method="get" class="card p-3 shadow-sm">
                <div class="row g-2 align-items-center">
                    <div class="col-auto">
                        <label class="form-label fw-medium">Fecha Inicio:</label>
                    </div>
                    <div class="col-md-4">
                        <input type="date" name="fechaInicio" class="form-control" value="@ViewData["FechaInicio"]" />
                    </div>
                    <div class="col-auto">
                        <label class="form-label fw-medium">Fecha Fin:</label>
                    </div>
                    <div class="col-md-4">
                        <input type="date" name="fechaFin" class="form-control" value="@ViewData["FechaFin"]" />
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search me-2"></i>Buscar
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <form asp-controller="Pedidos" asp-action="Index" method="get" class="card p-3 shadow-sm">
                <div class="row g-2 align-items-center">
                    <div class="col-auto">
                        <label class="form-label fw-medium">Buscar:</label>
                    </div>
                    <div class="col-md-6">
                        <input type="text" name="buscar" class="form-control" placeholder="Número, Estado, Cliente..." value="@ViewData["Buscar"]" />
                    </div>
                    <div class="col-auto">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-search me-2"></i>Buscar
                        </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="row">
    @foreach (var pedido in Model.Pedidos)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 border-0 shadow-sm hover-card">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-primary">Pedido #@pedido.NumeroPedido</h5>
                    <p class="card-text"><strong>Fecha:</strong> @pedido.FechaPedido.ToString("dd/MM/yyyy")</p>
                    <p class="card-text"><strong>Estado:</strong> <span class="badge bg-@(pedido.EstadoPedido == "Reembolsado" ? "warning" : "success")">@pedido.EstadoPedido</span></p>
                    <p class="card-text"><strong>Cliente:</strong> @pedido.IdUsuarioNavigation?.NombreCompleto</p>
                    <div class="mt-auto">
                        <div class="btn-group w-100" role="group" aria-label="Acciones">
                            <a asp-action="DetallesPedido" asp-route-id="@pedido.Id" class="btn btn-outline-primary btn-sm">Detalles</a>
                            @if (User.IsAdministrador())
                            {
                                <a asp-action="Edit" asp-route-id="@pedido.Id" class="btn btn-outline-primary btn-sm">Actualizar</a>
                                <form asp-controller="Payment" asp-action="RefundSale" method="post" class="d-inline">
                                    <input type="hidden" name="PedidoId" value="@pedido.Id" />
                                    <input type="hidden" name="Currency" value="@pedido.Currency" />
                                    <button type="submit" class="btn btn-outline-warning btn-sm"
                                            @(pedido.EstadoPedido == "Reembolsado" ? "disabled" : "")>
                                        Reembolsar
                                    </button>
                                </form>
                                <button class="btn btn-success btn-sm activate-action-button" data-pedido-id="@pedido.Id" data-bs-toggle="tooltip" title="Agregar info envio">
                                    <i class="bi bi-check-circle-fill nav-icon"></i> Agregar info envio
                                </button>
                            }
                        </div>
                        @if (User.IsAdministrador())
                        {
                            <div class="mt-2">
                                <a asp-action="Delete" asp-route-id="@pedido.Id" class="btn btn-outline-danger btn-sm w-100">Eliminar</a>
                                <a asp-action="DetallesPagoEjecutado" asp-route-id="@pedido.OrderId" class="btn btn-outline-primary btn-sm w-100 mt-2">Detalles Pago</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<!-- Paginación -->
@if (Model.Paginas != null && Model.Paginas.Any())
{
    <nav aria-label="Navegación de páginas" class="mt-5">
        <ul class="pagination justify-content-center">
            @foreach (var pagina in Model.Paginas)
            {
                <li class="page-item @(pagina.Habilitada ? "" : "disabled") @(pagina.Activa ? "active" : "")">
                    <a class="page-link"
                       href="@Url.Action("Index", new { pagina = pagina.Pagina, buscar = Model.Buscar })"
                       style="transition: background-color 0.2s;">
                        @pagina.Texto
                    </a>
                </li>
            }
        </ul>
    </nav>
}
</div>

<!-- Modal -->
<div class="modal fade" id="confirmModal" tabindex="-1" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content rounded-3">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="confirmModalLabel">Confirmación</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p id="confirmMessage">¿Estás seguro de que deseas realizar esta acción?</p>
                <p id="loadingMessage" style="display: none;">Procesando...</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-primary" id="confirmActionBtn">Confirmar</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Confirmación Agregar Info Envío -->
<div class="modal fade" id="agregarEnvioModal" tabindex="-1" aria-labelledby="agregarEnvioModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content rounded-3">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title" id="agregarEnvioModalLabel">Agregar información de envío</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>
            <div class="modal-body">
                <form id="agregarEnvioForm" method="post" asp-controller="Pedidos" asp-action="AgregarInfoEnvio">
                    <input type="hidden" name="pedidoId" id="pedidoIdInput" />

                    <div class="mb-3">
                        <label for="carrierSelect" class="form-label">Transportista</label>
                        <select class="form-select" name="carrier" id="carrierSelect" required>
                            <option value="">Seleccione transportista</option>
                            <option value="CORREOS_ES">Correos España</option>
                            <option value="DHL">DHL</option>
                            <option value="FEDEX">FedEx</option>
                            <option value="UPS">UPS</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="barcodeSelect" class="form-label">BarCode Type</label>
                        <select class="form-select" name="barcode" id="barcodeSelect" required>
                            <option value="">Seleccione un codigo de barras</option>
                            <option value="UPC_A">UPC_A</option>
                            <option value="EAN_13">EAN_13</option>
                            <option value="EAN_8">EAN_8</option>
                            <option value="CODE_128">CODE_128</option>
                        </select>
                    </div>
                </form>

                <div id="loadingMessageEnvio" class="text-center mt-3" style="display: none;">
                    <div class="spinner-border text-success" role="status"></div>
                    <p class="mt-2">Procesando...</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                <button type="button" class="btn btn-success" id="confirmAgregarEnvioBtn">Confirmar</button>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.querySelectorAll(".activate-action-button").forEach(boton => {
                boton.addEventListener("click", function () {
                    document.getElementById("pedidoIdInput").value = this.getAttribute("data-pedido-id");
                    new bootstrap.Modal(document.getElementById("agregarEnvioModal")).show();
                });
            });

            document.getElementById("confirmAgregarEnvioBtn").addEventListener("click", function () {
                if (!document.getElementById("carrierSelect").value) {
                    alert("Por favor selecciona un transportista.");
                    return;
                }
                 if (!document.getElementById("barcodeSelect").value) {
                    alert("Por favor selecciona un tipo de codigo de barras");
                    return;
                }
                document.getElementById("loadingMessageEnvio").style.display = "block";
                this.disabled = true;
                document.getElementById("agregarEnvioForm").submit();
            });
        });
    </script>


}