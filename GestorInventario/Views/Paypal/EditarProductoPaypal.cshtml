@using GestorInventario.Application.Classes
@model EditProductPaypal

@{
    ViewData["Title"] = "Editar Producto";
}

<div class="container mt-5">
    <div class="card shadow-sm hover-card animate-fade-in">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0"><i class="bi bi-pencil-square me-2"></i>Editar Producto</h2>
        </div>
        <div class="card-body p-4">
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-warning alert-dismissible fade show" role="alert">
                    @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }

            <form asp-action="EditarProductoPaypal" method="post">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Name" class="form-label fw-bold"><i class="bi bi-tag me-2"></i>Nombre</label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="form-group">
                            <label asp-for="Description" class="form-label fw-bold"><i class="bi bi-text-paragraph me-2"></i>Descripción</label>
                            <input asp-for="Description" class="form-control" />
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4 text-end">
                    <button type="submit" class="btn btn-primary"><i class="bi bi-save me-2"></i>Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>

