
@model GestorInventario.Application.DTOs.CreateRoleDTO
<h1>Crear Rol</h1>

<form asp-action="CreateRole" method="post">
    <div class="form-group">
        <label>Nombre del Rol</label>
        <input type="text" name="nombreRol" class="form-control" value="@Model.NombreRol" required />
    </div>
    <div class="form-group">
        <label>Permisos</label>
        <div>
            @foreach (var permiso in Model.Permisos)
            {
                <div class="form-check">
                    <input type="checkbox" name="permisoIds" value="@permiso.Id" class="form-check-input"
                           @(Model.PermisoIds != null && Model.PermisoIds.Contains(permiso.Id) ? "checked" : "") />
                    <label class="form-check-label">@permiso.Nombre - @permiso.Descripcion</label>
                </div>
            }
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Crear Rol</button>
 
</form>